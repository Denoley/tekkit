--------USERVARIABLES--------
--Lower Banner Settings--
lowerBanner = "HAVE A VERY SAFE DAY"
lowerBannerColor = colors.red
lowerBannerSize = 3
--General Settings--
title = "General Status"
titleSize = 3
titleBackgroundColor = colors.black
mainBackgroundColor = colors.black
refreshDelay = 0.3


--------VARS--------
lock = true

--------FUNCTIONS--------
function centerText(mon,text,posY) 
	local x,y = mon.getSize()
	mon.setCursorPos(math.ceil((x/2)-(string.len(text)/2)) + 1,posY)
	mon.write(text)
end

--------MAINLOOP--------
while true do
	local mon = peripheral.find("monitor")
	if mon then
		--Initial Clean--
		term.clear()
		mon.setBackgroundColor(colors.black)
		mon.clear()
		--Lower Banner--
		mon.setTextScale(lowerBannerSize)
		x,y = mon.getSize()
		mon.setBackgroundColor(colors.red)
		mon.setCursorPos(x,y)
		mon.clearLine()
		if lock then pos = x lock = false end
		if pos == -string.len(lowerBanner) then lock = true end 
		mon.setCursorPos(pos,y)
		mon.write(lowerBanner)
		pos = pos - 1
		--Title--
		mon.setBackgroundColor(titleBackgroundColor)
		mon.setTextScale(titleSize)
		centerText(mon,"title",1)

		--SleepCycle--
		sleep(refreshDelay)
	else
		sleep(1)
	end
end
