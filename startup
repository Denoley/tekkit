lock = true
while true do
local mon = peripheral.find("monitor")
  if mon then
    mon.setBackgroundColor(colors.black)
    mon.clear()
    mon.setTextScale(3)
    x,y = mon.getSize()
    mon.setBackgroundColor(colors.red)
    mon.setCursorPos(x,y)
    mon.clearLine()
      if lock then
      pos = x
      lock = false
      end
    if pos == -20 then lock = true end 
    mon.setCursorPos(pos,y)
    mon.write("HAVE A VERY SAFE DAY")
    pos = pos - 1
    sleep(0.4)
   else
    sleep(1)
  end
end
