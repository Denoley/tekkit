lock = true
lowerBanner = "HAVE A VERY SAFE DAY"
lowerBannerSpeed = 0.3



function centerText(mon,text,posY) 
  local x,y = mon.getSize()
  mon.setCursorPos(math.round((x/2)-(string.len(text)/2)),posY)
  mon.write(text)
end


while true do
local mon = peripheral.find("monitor")
  if mon then
    term.clear()
    mon.clear()
    mon.setBackgroundColor(colors.black)
    mon.clear()
    mon.setTextScale(3)
    x,y = mon.getSize()
    mon.setBackgroundColor(colors.red)
    mon.setCursorPos(x,y)
    mon.clearLine()
      if lock then
      pos = x
      lock = false
      end
    if pos == -string.len(lowerBanner) then lock = true end 
    mon.setCursorPos(pos,y)
    mon.write(lowerBanner)
    pos = pos - 1
    centerText(mon,"Test_1",1)
    sleep(lowerBannerSpeed)
   else
    sleep(1)
  end
end
